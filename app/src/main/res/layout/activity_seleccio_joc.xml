<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccioJoc">

    <ImageView
        android:id="@+id/imatgeFonsSeleccio"
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:src="@drawable/logo_fons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />


    <ImageButton
        android:id="@+id/modeClassic"
        android:layout_width="154dp"
        android:layout_height="708dp"
        android:background="@color/lightorange"
        android:src="@drawable/baseline_search_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="97dp"
        android:layout_height="23dp"
        android:text="CLÃ€SSIC"
        android:textColor="@color/orange"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/modeClassic"
        app:layout_constraintEnd_toEndOf="@+id/modeClassic"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="@+id/modeClassic"
        app:layout_constraintTop_toTopOf="@+id/modeClassic"
        app:layout_constraintVertical_bias="0.047" />

    <ImageButton
        android:id="@+id/modeActors"
        android:layout_width="154dp"
        android:layout_height="708dp"
        android:background="@color/lightorange"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toEndOf="@+id/modeClassic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229" />

    <TextView
        android:layout_width="93dp"
        android:layout_height="28dp"
        android:text="ACTORS"
        android:textColor="@color/orange"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/modeActors"
        app:layout_constraintEnd_toEndOf="@+id/modeActors"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="@+id/modeActors"
        app:layout_constraintTop_toTopOf="@+id/modeActors"
        app:layout_constraintVertical_bias="0.042" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>